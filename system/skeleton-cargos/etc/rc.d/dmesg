#!/bin/sh
#
# $NetBSD: dmesg,v 1.9 2004/08/13 18:08:03 mycroft Exp $
#

# PROVIDE: dmesg
# BEFORE:  DAEMON

$_rc_subr_loaded . /etc/rc.subr

name="dmesg"
rcvar=$name
dmesg_file="/var/run/dmesg.boot"
start_cmd="do_dmesg"
stop_cmd=":"

do_dmesg()
{
	rm -f ${dmesg_file}
	( umask 022 ; /bin/dmesg $rc_flags > ${dmesg_file} )
}

load_rc_config $name
run_rc_command "$1"
